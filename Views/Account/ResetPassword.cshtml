@model FYP.Models.PasswordResetModel

@{

}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/styles.css" rel="stylesheet" />

<div id="loginModal" style="margin-top:100px" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h1 class="text-center">Password Reset</h1>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post))
                {
                    <hr />

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.NewPassword, new { type = "password", @class = "form-control input-lg", placeholder = "New Password" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", @class = "form-control input-lg", placeholder = "Confirm New Password" })
                        <input type="text" class="hidden" name="token" value=@ViewBag.token>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block" onclick="submit">Reset Password</button>
                    </div>
                }
                <div class="col-m-12">
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
